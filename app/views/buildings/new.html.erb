<div class="authform">
  <%= form_for(@building) do |f| %>
    <h3>New building</h3>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

     <%= f.submit 'new', :class => 'button right' %>
  <% end %>
</div>
